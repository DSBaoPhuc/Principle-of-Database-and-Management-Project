<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane style="-fx-background-color: #C7F5FE;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.lms.Pie_chartController">
    <VBox>
        <AnchorPane prefHeight="75.0" prefWidth="381.0">
            <children>
                <Text layoutX="66.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Number of Book per Subject" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>

        <!-- Container for PieChart and Labels -->
        <HBox fx:id="chartContainer" alignment="CENTER" spacing="10">
            <!-- PieChart -->
            <PieChart fx:id="bookPieChart" prefHeight="400" prefWidth="400" />
        </HBox>
    </VBox>
</AnchorPane>

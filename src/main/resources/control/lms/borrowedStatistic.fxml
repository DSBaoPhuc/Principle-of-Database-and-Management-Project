<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.lms.StatisticController">
    <BarChart fx:id="barChart" VBox.vgrow="ALWAYS">
        <xAxis>
            <CategoryAxis label="Month" fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Total Book" />
        </yAxis>
    </BarChart>
     <Button fx:id="SwapBtn" onAction="#toggleChart" onMouseEntered="#highlightButton" onMouseExited="#resetButtonColor" prefHeight="30.0" prefWidth="150.0" style="-fx-background-radius: 20; -fx-background-color: #153E90;" text="Toggle Chart" textFill="WHITE" />
    <HBox alignment="CENTER" />
</VBox>
